[global]
    font = Source Code Pro 14

    allow_markup = yes
    # The format of the message. Possible variables are:
    #   %a  appname
    #   %s  summary
    #   %b  body
    #   %i  iconname (including its path)
    #   %I  iconname (without its path)
    #   %p  progress value if set ([  0%] to [100%]) or nothing
    format = "<b>%a:</b> %s\n%b"

    sort = yes

    indicate_hidden = yes
    alignment = left
    bounce_freq = 0
    show_age_threshold = 60

    word_wrap = yes
    ignore_newline = no
    geometry = "400x5-20-60"
    transparency = 0

    idle_threshold = 60
    monitor = 0
    follow = keyboard
    sticky_history = yes

    line_height = 0
    separator_height = 2
    padding = 8
    horizontal_padding = 8

    # Define a color for the separator.
    # possible values are:
    #  * auto: dunst tries to find a color fitting to the background
    #  * foreground: use the same color as the foreground
    #  * frame: use the same color as the frame.
    #  * anything else will be interpreted as a X color
    separator_color = auto
    startup_notification = true

    # dmenu path
    dmenu = /usr/bin/dmenu -p dunst:

    browser = /usr/bin/google-chrome-stable -new-tab

    icon_position = left
    max_icon_size = 100

[frame]
    width = 0
    color = "#000000"

frame_color = "#EEFFFF"
separator_color = "#EEFFFF"

[base16_low]
    msg_urgency = low
    background = "#303030"
    foreground = "#4A4A4A"

[base16_normal]
    msg_urgency = normal
    background = "#353535"
    foreground = "#EEFFFF"

[base16_critical]
    msg_urgency = critical
    background = "#F07178"
    foreground = "#EEFFFF"

# vim:ft=dosini
