# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

# Border and gaps
default_border pixel
gaps inner 5
smart_gaps on

# Set wallpaper
exec feh --bg-scale ~/Pictures/Wallpaper.jpg
exec nitrogen --restore

# Playback controls
bindsym XF86AudioPlay exec --no-startup-id playerctl play-pause
bindsym XF86AudioPause exec --no-startup-id playerctl play-pause
bindsym XF86AudioNext exec --no-startup-id playerctl next
bindsym XF86AudioPrev exec --no-startup-id playerctl previous

# Use pactl to adjust volume in PulseAudio.
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pulseaudio-ctl up
bindsym XF86AudioLowerVolume exec --no-startup-id pulseaudio-ctl down
bindsym XF86AudioMute exec --no-startup-id pulseaudio-ctl mute
bindsym XF86AudioMicMute exec --no-startup-id pulseaudio0ctl mute-input

# Brightness controll
bindsym XF86MonBrightnessUp exec --no-startup-id brightnessctl s +5%
bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl s 5%-

# Multimonitor setup
workspace 1 output HDMI-1
workspace 2 output eDP-1
workspace 3 output HDMI-1
workspace 4 output eDP-1
workspace 5 output HDMI-1
workspace 6 output eDP-1
workspace 7 output HDMI-1
workspace 8 output eDP-1

# Window settings
for_window[class="Pavucontrol"] floating enable, resize set 800px 500px, move position center
for_window[class="Nm-connection-editor"] floating enable, resize set 800px 500px, move position center
for_window [class="Google-chrome"] move to workspace 2
for_window [class="Riot"] move to workspace 4
for_window [class="discord"] move to workspace 4
for_window [class="Spotify"] move to workspace 6

# Select network
bindsym $mod+n exec --no-startup-id networkmanager_dmenu

# Select bluetooth device
bindsym $mod+b exec --no-startup-id rofi-bluetooth

# Move between workspaces
bindsym $mod+Tab workspace next_on_output
bindsym $mod+Shift+Tab workspace prev_on_output

# Media control mode
bindsym $mod+m mode "media"
mode "media" {
    bindsym space exec --no-startup-id playerctl play-pause

    bindsym h exec --no-startup-id playerctl previous
    bindsym Left exec --no-startup-id playerctl previous

    bindsym l exec --no-startup-id playerctl next
    bindsym Right exec --no-startup-id playerctl next

    bindsym k exec --no-startup-id pulseaudio-ctl up
    bindsym Up exec --no-startup-id pulseaudio-ctl up

    bindsym j exec --no-startup-id pulseaudio-ctl down
    bindsym Down exec --no-startup-id pulseaudio-ctl down

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# Config edit mode
bindsym $mod+c mode "config"
mode "config" {
    bindsym p exec termite -e 'nvim /home/ishaanshah/.config/polybar/config'; mode "default";
    bindsym i exec termite -e 'nvim /home/ishaanshah/.config/i3/config'; mode "default";
    bindsym n exec termite -e 'nvim /home/ishaanshah/.config/nvim/init.nvim'; mode "default";
    bindsym d exec termite -e 'nvim /home/ishaanshah/.config/dunst/dunstrc'; mode "default";

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# Quick navigation
bindsym $mod+Escape mode "normal"
mode "normal" {
    bindsym h focus left
    bindsym l focus right
    bindsym j focus down
    bindsym k focus up

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# Screenshot
bindsym --release $mod+Shift+P exec --no-startup-id scrot -s -e 'mv $f ~/Pictures'

# Locking
bindsym $mod+Control+l exec --no-startup-id i3lock -f
exec --no-startup-id xautolock -time 10 -locker '/bin/i3lock -f' -detectsleep &

# Gnome polkit
exec_always --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1
